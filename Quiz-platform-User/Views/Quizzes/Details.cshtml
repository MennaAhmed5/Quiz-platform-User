@model QuizDetailsVM

<div class="quiz-app">

    <div class="quiz-info">
        <div class="Name">Name: <span>@Model.Name</span></div>
        <div class="count">Questions Count: <span>@Model.TotalQuestions</span></div>
    </div>

    <form asp-action="Submit" asp-controller="Quizzes" method="post">
        @foreach (var item in Model.Questions)
        {
            <div class="quiz-area">
                <h2>@item.QuestionText</h2>  
            </div>

            <div class="answers-area">
                @if(item.AnswerType == "Text")    
                {
                    <textarea name="answer_@item.Id" class="form-control" placeholder="write your answer ..."></textarea>
                }
                else
                {
                    @foreach (var answer in item.Answers)  
                    {
                        <div class="answer">
                            <input type="radio" id="answer_@answer.Id" name="answer_@item.Id" value="@answer.Id" />
                            <label for="answer_@answer.Id">@answer.OptionText</label>
                        </div>
                    }
                }
            </div>
        }
        <button type="submit" class="submit-button">Submit Answer</button>
    </form>
</div>
 

 
